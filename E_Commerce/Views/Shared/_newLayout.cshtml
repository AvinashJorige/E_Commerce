<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/fonts/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/materailize/css/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/hover-min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <!-- Dropdown Structure -->
        <ul id="categorydpdwn" class="dropdown-content categorydpdwn">
            <li><a href="#!">one</a></li>
            <li><a href="#!">two</a></li>
            <li class="divider"></li>
            <li><a href="#!">three</a></li>
        </ul>
        <ul id="locationdpdwn" class="dropdown-content">
            <li><a href="#">one</a></li>
            <li><a href="#">two</a></li>
            <li><a href="#!">three</a></li>
        </ul>
        <ul id="logindpdwn" class="dropdown-content">
            <li><a href="#!">Edit Profile</a></li>
            <li><a href="/Login/Logout">Sign Out</a></li>
        </ul>

        <nav class="indigo accent-4">
            <div class="nav-wrapper">
                <span class="brand-logo button-collapse" data-activates="slide-out"><i class="fa fa-bars" aria-hidden="true"></i><a href="#">E-Commerce</a></span>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a class="dropdown-button" href="#!" data-activates="categorydpdwn">Categorys <i class="fa fa-chevron-down right" aria-hidden="true"></i></a>
                    </li>
                    <li>
                        <a class="dropdown-button" href="#!" data-activates="locationdpdwn">Locations <i class="fa fa-chevron-down right" aria-hidden="true"></i></a>
                    </li>
                    <li class="logIn_nav"><a href="/Login/loginAccess">Login</a></li>
                    <li class="signUp_nav"><a href="#!">Signup</a></li>
                    <li class="logindpdwn-li">
                        <a class="dropdown-button logindpdwn" href="#!" data-activates="logindpdwn"><span class="logName left"></span><i class="fa fa-user right" aria-hidden="true"></i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <!--left side navigation-->
        <ul id="slide-out" class="side-nav collapsible" data-collapsible="accordion">
            <li><a href="#!" class="collapsible-header waves-effect">Dashboard</a></li>
            <li><a href="#!" class="collapsible-header waves-effect">About us</a></li>
            <li><a href="#!" class="collapsible-header waves-effect">Category</a></li>
            <li>
                <div class="collapsible-header">Ads</div>
                <div class="collapsible-body">
                    <ul>
                        <li>
                            <a href="#!" class="waves-effect">Ads Details</a>
                        </li>
                        <li>
                            <a href="#!" class="waves-effect">Ads pending/approval</a>
                        </li>

                        <li>
                            <a href="#!" class="waves-effect">Post Ads</a>
                        </li>
                    </ul>
                </div>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Pricing Tables</a>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Account</a>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Save search</a>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Posting success</a>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Blog</a>
                <div class="collapsible-body">
                    <ul>
                        <li>
                            <a href="#!" class="waves-effect">Blog</a>
                        </li>
                        <li>
                            <a href="#!" class="waves-effect">Blog details</a>
                        </li>
                    </ul>
                </div>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Forget Password</a>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">FAQ</a>
            </li>
            <li>
                <a href="#!" class="collapsible-header waves-effect">Sign up</a>
            </li>
        </ul>
        <!-- END -->
    </div>

    <div class="row">
        <div class="col s12 m12 l12">
            <div style="padding:20px 10px">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/materailize/js/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/CommonScript/commAPIService.js"></script>
    <script src="~/Scripts/GenericScript/GenericScript.js"></script>
    <script src="~/Scripts/CommonScript/commCode.js"></script>
    <script>
        // Initialize collapse button
        $(".button-collapse").sideNav({
            menuWidth: 300, // Default is 300
            edge: 'left', // Choose the horizontal origin
            closeOnClick: true, // Closes side-nav on <a> clicks, useful for Angular/Meteor
            draggable: true, // Choose whether you can drag to open on touch screens,
            onOpen: function (el) { /* Do Stuff*/ }, // A function to be called when sideNav is opened
            onClose: function (el) { /* Do Stuff*/ }, // A function to be called when sideNav is closed
        });
        // Initialize collapsible (uncomment the line below if you use the dropdown variation)
        //$('.collapsible').collapsible();
    </script>
    @RenderSection("Scripts", false/*required*/)
</body>
</html>
